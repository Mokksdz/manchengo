{
  "name": "manchengo-smart-erp",
  "version": "1.0.0",
  "private": true,
  "description": "Manchengo Smart ERP - Monorepo",
  "scripts": {
    "prepare": "husky",
    "format": "prettier --write \"apps/**/*.{ts,tsx,js,jsx,json,css}\"",
    "format:check": "prettier --check \"apps/**/*.{ts,tsx,js,jsx,json,css}\""
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1"
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "apps/**/*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
