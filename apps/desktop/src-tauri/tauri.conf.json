{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "dz.manchengo.smart.erp",
  "productName": "Manchengo Smart ERP",
  "version": "1.0.0",

  "build": {
    "devUrl": "http://localhost:3001",
    "frontendDist": "./ui"
  },

  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Manchengo Smart ERP",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ]
  },

  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "msi"],
    "icon": [
      "icons/icon.png"
    ]
  }
}