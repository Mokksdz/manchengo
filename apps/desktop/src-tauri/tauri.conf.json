{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "dz.manchengo.smart.erp",
  "productName": "ManchengoERP",
  "version": "1.0.0",

  "build": {
    "frontendDist": "./ui"
  },

  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; connect-src 'self' https://*.manchengo.dz wss://*.manchengo.dz"
    },
    "windows": [
      {
        "label": "main",
        "title": "Manchengo Smart ERP",
        "url": "tauri://localhost/",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ]
  },

  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "icon": [
      "icons/icon.icns",
      "icons/icon.png"
    ],
    "macOS": {
      "minimumSystemVersion": "12.0",
      "exceptionDomain": "",
      "signingIdentity": null
    }
  }
}
